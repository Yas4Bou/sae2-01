        "start" : "start:windows"
    },

    "config": {
        "process-timeout": 0
    },
    "authors": [
        {
            "name": "line martinet",
            "email": "line.martinet@etudiant.univ-reims.fr"
        }
    ],
    "require": {
        "ext-pdo": "*"
